# Environment variables for Direct MT5 Trading
# Copy this to .env and fill in your values

# Telegram API credentials (get from https://my.telegram.org)
TELEGRAM_API_ID=your_api_id_here
TELEGRAM_API_HASH=your_api_hash_here
TELEGRAM_PHONE=your_phone_number_here

# Target group to monitor (use list_groups.py to find the ID)
TELEGRAM_GROUP_ID=your_group_id_here

# Trading Strategy Configuration
ENTRY_STRATEGY=adaptive
DEFAULT_VOLUME=0.01

# MT5 API URL (if using HTTP API instead of direct connection)
MT5_API_URL=http://localhost:8080/trade

# n8n webhook URL for Telegram logging
N8N_LOG_WEBHOOK=https://your-n8n.com/webhook/trading-logs

# Session name for Telegram client (optional)
SESSION_NAME=telegram_monitor